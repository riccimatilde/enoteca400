@model PhotoDetailsModel
@{
    ViewData["Title"] = "Photo Details";
}
<br><br><br><br>
<title>@ViewData["Title"] - Enoteca Quattrocento</title>
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true">
<style>
    body {
        font-family: 'Arial', sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f8f9fa;
    }

    .container {
        padding-top: 50px;
        background-color: #ffe5bd;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
        border-radius: 15px;
    }

    h2 {
        font-size: 24px;
        font-weight: bold;
        text-align: center;
        margin-bottom: 30px;
        color: #343a40;
    }

    .photo-details-frame {
        border: 2px solid #343a40;
        border-radius: 10px;
        padding: 20px;
        background-color: #fff;
        margin-bottom: 20px;
    }

    .photo-details img {
        width: 200px;
        height: 150px;
        display: block;
        border-radius: 5px;
        margin-left: 400px;
        align: right;
    }


    .photo-details p {
        font-size: 18px;
        line-height: 1.6;
        color: #555555;
        text-align: justify;
    }
</style>


<div class="container mt-5 mb-5">
    <h2>@ViewData["Title"]</h2>

    <div class="row">
        <div class="col-md-6">
            <div class="photo-details-frame">
                <img src="@Url.Content(Model.PhotoUrl)" alt="Photo" style="max-width: 250px; max-height: 700px;" />
            </div>
        </div>
        <div class="col-md-6">
            <div class="photo-details-frame">
                <p>@Model.Description</p>
            </div>
        </div>
    </div>
</div>
