@model Login
@{
    ViewData["Title"] = "Login";
}
<br><br><br><br>
<div class="text-center">
    <h1 class="display-4">Accedi</h1>
    <div>
        <form class="m-2" method="post" asp-controller="Home" asp-action="Login">
            <div class="form-group">
                <label asp-for="Username">Username:</label>
                <input asp-for="Username" type="text" class="form-control" id="Username" name="Username" required>
            </div>
            <div class="form-group">
                <label asp-for="Password">Password:</label>
                <input asp-for="Password" type="password" class="form-control" id="Password" name="Password" required>
            </div>
            <button type="submit" class="btn btn-primary">Accedi</button>
            <a asp-area="" asp-controller="Account" asp-action="SignUp">Non hai ancora un account? Registrati</a>
        </form>
    </div>
</div>
